{{- $work := promptBool "Use work profile" false -}}
{{- $email  := promptString "Git email" "edusimonpicon@gmail.com" -}}

[data]
name = "Eduardo Simon"
email = {{ $email | quote }}
work = {{ $work }}

[merge]
   command = "nvim"
   args = ["-d", "{{ .Destination }}", "{{ .Source }}", "{{ .Target }}"]

[diff]
    exclude = ["externals"]
    pager = "delta"

[git]
    autoCommit = true
    autoPush = true

